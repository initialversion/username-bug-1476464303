<!-- Validation failure messages -->
<% if @store.errors.any? %>
  <% @store.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Store</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_store" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @store.name %>">
      </div>

      <!-- Label and input for merchant_id -->
      <div class="form-group">
        <label for="merchant_id" class="control-label">
          Merchant
        </label>

        <%= select_tag(:merchant_id, options_from_collection_for_select(Merchant.all, :id, :created_at, @store.merchant_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Store
      </button>
      or
      <a href="/stores">Cancel</a>
    </form>
  </div>
</div>
